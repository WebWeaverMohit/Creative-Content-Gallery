<% include ./partials/header.ejs %>
<div
  class="min-h-screen w-full bg-cream text-primary flex flex-col items-center justify-center px-4 py-10"
>
  <div
    class="w-full max-w-xs sm:max-w-sm bg-white shadow-xl rounded-2xl p-6 relative flex flex-col items-center justify-center"
  >
    <form action="/changedetail" method="post" class="w-full space-y-5">
      <div>
        <label class="block mb-1 text-sm font-medium">Name</label>
        <input
          class="w-full px-4 py-2 text-primary font-medium text-base bg-cream border border-primary rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
          type="text"
          name="name"
          value="<%= user.name %>"
          required
        />
      </div>
      <div>
        <label class="block mb-1 text-sm font-medium">Username</label>
        <input
          class="w-full px-4 py-2 text-primary font-medium text-base bg-cream border border-primary rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
          type="text"
          name="username"
          value="<%= user.username %>"
          required
        />
      </div>
      <div class="flex justify-center">
        <input
          class="bg-secondary text-white px-6 py-2 rounded-full font-semibold cursor-pointer hover:scale-105 transition-transform"
          type="submit"
          value="Update"
        />
      </div>
    </form>
    <a
      href="/change-password"
      class="absolute text-xs text-primary bottom-3 right-3 hover:underline"
      >Want to change password?</a
    >
  </div>
</div>
<% include ./partials/footer.ejs %>
