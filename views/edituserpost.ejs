<% include ./partials/header.ejs %>
<div
  class="overflow-y-auto flex items-center justify-center min-h-screen w-full bg-cream px-4 py-10"
>
  <div
    class="w-full max-w-6xl flex flex-col sm:flex-row gap-6 bg-white rounded-2xl shadow-xl overflow-hidden"
  >
    <!-- Image Section -->
    <div class="w-full sm:w-[60%] h-96 sm:h-[75vh]">
      <img
        class="w-full h-full object-cover"
        src="/images/uploads/<%= post.image %>"
        alt="Post Image"
      />
    </div>

    <!-- Form Section -->
    <div class="w-full sm:w-[40%] px-6 py-8 flex flex-col justify-center">
      <form
        action="/changepostdetail/<%= post._id %>"
        method="post"
        class="space-y-6"
      >
        <div>
          <label class="block text-lg font-semibold text-primary mb-2"
            >Title</label
          >
          <input
            class="w-full text-base text-primary px-3 py-2 border-b-2 border-primary bg-transparent focus:outline-none focus:border-secondary"
            type="text"
            name="title"
            value="<%= post.title %>"
            required
          />
        </div>

        <div>
          <label class="block text-lg font-semibold text-primary mb-2"
            >Description</label
          >
          <textarea
            class="w-full h-32 resize-none text-base text-primary px-3 py-2 border-b-2 border-primary bg-transparent focus:outline-none focus:border-secondary"
            name="description"
            required
          >
<%= post.description %></textarea
          >
        </div>

        <div class="text-center">
          <input
            class="px-6 py-2 bg-secondary text-white rounded-full font-semibold cursor-pointer hover:scale-105 transition-transform"
            type="submit"
            value="Update Post"
          />
        </div>
      </form>
    </div>
  </div>
</div>
<% include ./partials/footer.ejs %>
