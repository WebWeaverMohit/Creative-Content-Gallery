<% include ./partials/header.ejs %>
<div
  class="min-h-screen w-full flex items-center justify-center bg-cream px-4 py-10"
>
  <div
    class="w-full max-w-6xl flex flex-col sm:flex-row gap-6 bg-white rounded-2xl shadow-xl overflow-hidden"
  >
    <!-- Image Section -->
    <div class="w-full sm:w-[60%] h-96 sm:h-[75vh]">
      <% const isExternal = post.image.startsWith("http"); %>
      <img
        class="w-full h-full object-cover"
        src="<%= isExternal ? post.image : '/images/uploads/' + post.image %>"
        alt="Post Image"
      />
    </div>

    <!-- Text Details -->
    <div
      class="w-full sm:w-[40%] px-6 py-10 flex flex-col justify-center relative"
    >
      <h2 class="text-2xl font-bold text-primary mb-6 break-words">
        Title: <span class="font-medium"><%= post.title %></span>
      </h2>
      <h4 class="text-lg text-primary mb-10 break-words">
        Description: <span class="font-normal"><%= post.description %></span>
      </h4>
      <h5 class="text-sm text-primary absolute bottom-6 right-6 opacity-70">
        Posted by â€” <%= post.user.username %>
      </h5>
    </div>
  </div>
</div>
<% include ./partials/footer.ejs %>
