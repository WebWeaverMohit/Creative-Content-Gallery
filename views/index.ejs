<% include ./partials/header.ejs %>
<div
  class="w-full min-h-screen bg-cream flex items-center justify-center px-4 py-10"
>
  <div
    class="w-full max-w-sm sm:max-w-md bg-white shadow-xl px-6 sm:px-8 py-10 rounded-2xl transition-all duration-300"
  >
    <!-- Camera Icon instead of Pinterest -->
    <i
      class="ri-camera-3-line text-5xl text-secondary block text-center mb-5 animate-pulse"
    ></i>

    <h1
      class="text-2xl sm:text-3xl text-center mb-6 font-semibold text-primary leading-snug"
    >
      Welcome to Creative Content Gallery
    </h1>

    <form action="/login" method="post" class="space-y-5">
      <div>
        <label
          class="block text-sm font-medium mb-1 px-1 text-primary"
          for="username"
          >Username</label
        >
        <input
          class="w-full px-4 py-2 rounded-xl border border-primary focus:outline-none focus:ring-2 focus:ring-primary bg-cream text-sm"
          type="text"
          name="username"
          placeholder="Enter username"
          required
        />
      </div>

      <div>
        <label
          class="block text-sm font-medium mb-1 px-1 text-primary"
          for="password"
          >Password</label
        >
        <input
          class="w-full px-4 py-2 rounded-xl border border-primary focus:outline-none focus:ring-2 focus:ring-primary bg-cream text-sm"
          type="password"
          name="password"
          placeholder="Enter password"
          required
        />
      </div>

      <div class="text-right">
        <a class="text-sm text-primary font-medium hover:underline" href="#"
          >Forgot Password?</a
        >
      </div>

      <div class="flex justify-center">
        <input
          class="px-6 py-2 bg-secondary text-white rounded-full font-semibold cursor-pointer hover:scale-105 transition-transform shadow-sm"
          type="submit"
          value="Login"
        />
      </div>
    </form>

    <a
      class="block text-center text-sm mt-6 font-medium text-primary hover:underline"
      href="/register"
      >Don't have an account?</a
    >
  </div>
</div>
<% include ./partials/footer.ejs %>
