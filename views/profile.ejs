<% include ./partials/header.ejs %>
<div
  class="profile min-h-screen w-full bg-cream text-primary px-6 sm:px-10 py-10"
>
  <form
    id="upload-form"
    hidden
    action="/fileupload"
    method="post"
    enctype="multipart/form-data"
  >
    <input type="file" name="image" />
  </form>

  <div class="profdets flex flex-col items-center justify-center">
    <div class="relative">
      <span
        id="upload-icon"
        class="h-8 w-8 absolute bg-white shadow-md rounded-full bottom-0 right-0 flex items-center justify-center cursor-pointer hover:scale-110 transition-transform"
      >
        <i class="text-primary ri-pencil-line"></i>
      </span>
      <div
        class="w-28 h-28 bg-zinc-200 rounded-full overflow-hidden border-4 border-white shadow-md"
      >
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%= user.profileImage && user.profileImage !== '' ? user.profileImage : 'default.avif' %>"
          alt="Profile Image"
        />
      </div>
    </div>
    <h1 class="text-2xl capitalize font-semibold mt-4 text-center">
      <%= user.name %>
    </h1>
    <h3 class="text-lg text-center font-medium opacity-80">
      @<%= user.username %>
    </h3>
    <a
      href="/edit"
      class="mt-3 px-6 py-2 bg-primary text-white rounded-full font-medium hover:scale-105 transition-transform"
      >Edit</a
    >
    <a
      href="/add"
      class="px-8 py-2 rounded-full bg-secondary text-white text-base font-semibold mt-4 hover:scale-105 transition-transform"
      >Add New Post</a
    >
  </div>

  <div
    class="cards flex flex-wrap justify-center sm:justify-start gap-6 mt-12 px-4 sm:px-10"
  >
    <a href="/show/posts" class="card w-52">
      <div
        class="w-full h-36 bg-zinc-200 rounded-xl overflow-hidden shadow-sm hover:scale-105 transition-transform"
      >
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%= user?.posts[0]?.image %>"
          alt="User Post Preview"
        />
      </div>
      <h4 class="text-lg font-semibold mt-2 ml-1">Your Uploaded Pins</h4>
      <h5 class="text-sm font-medium ml-1 opacity-70">
        <%= user.posts.length %> Pins
      </h5>
    </a>
  </div>
</div>

<script>
  document.querySelector("#upload-icon").addEventListener("click", function () {
    document.querySelector("#upload-form input").click();
  });

  document
    .querySelector("#upload-form input")
    .addEventListener("change", function () {
      document.querySelector("#upload-form").submit();
    });
</script>
<% include ./partials/footer.ejs %>
