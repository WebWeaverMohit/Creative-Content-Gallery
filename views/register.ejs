<% include ./partials/header.ejs %>
<div
  class="w-full min-h-screen bg-cream flex items-center justify-center px-4 py-10"
>
  <div
    class="w-full max-w-sm sm:max-w-md bg-white shadow-xl px-6 sm:px-8 py-10 rounded-2xl transition-all duration-300"
  >
    <i
      class="ri-pinterest-fill text-5xl text-secondary block text-center mb-5 animate-bounce"
    ></i>
    <h1
      class="text-2xl sm:text-3xl text-center mb-6 font-semibold text-primary leading-snug capitalize"
    >
      Create New Account
    </h1>

    <form action="/register" method="post" class="space-y-4">
      <div>
        <label class="block text-sm font-medium mb-1 px-1 text-primary"
          >Username</label
        >
        <input
          class="w-full px-4 py-2 rounded-xl border border-primary bg-cream focus:outline-none focus:ring-2 focus:ring-primary"
          type="text"
          name="username"
          placeholder="Username"
          required
        />
      </div>

      <div>
        <label class="block text-sm font-medium mb-1 px-1 text-primary"
          >Full Name</label
        >
        <input
          class="w-full px-4 py-2 rounded-xl border border-primary bg-cream focus:outline-none focus:ring-2 focus:ring-primary"
          type="text"
          name="fullname"
          placeholder="Full Name"
          required
        />
      </div>

      <div>
        <label class="block text-sm font-medium mb-1 px-1 text-primary"
          >Email</label
        >
        <input
          class="w-full px-4 py-2 rounded-xl border border-primary bg-cream focus:outline-none focus:ring-2 focus:ring-primary"
          type="email"
          name="email"
          placeholder="Email"
          required
        />
      </div>

      <input
        type="tel"
        pattern="[0-9]{10}"
        maxlength="10"
        inputmode="numeric"
        name="Contact"
        placeholder="Contact"
        class="w-full px-4 py-2 rounded-xl border border-primary bg-cream focus:outline-none focus:ring-2 focus:ring-primary"
        required
      />

      <div>
        <label class="block text-sm font-medium mb-1 px-1 text-primary"
          >Password</label
        >
        <input
          class="w-full px-4 py-2 rounded-xl border border-primary bg-cream focus:outline-none focus:ring-2 focus:ring-primary"
          type="password"
          name="password"
          placeholder="Password"
          required
        />
      </div>

      <div class="pt-2">
        <input
          class="w-full px-6 py-2 bg-secondary text-white rounded-full font-semibold cursor-pointer hover:scale-105 transition-transform shadow-sm"
          type="submit"
          value="Create New Account"
        />
      </div>
    </form>

    <a
      class="block text-center text-sm mt-6 font-medium text-primary hover:underline"
      href="/"
      >Already have an account?</a
    >
  </div>
</div>
<% include ./partials/footer.ejs %>
